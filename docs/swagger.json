{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/analyze": {
            "post": {
                "description": "Analyzes the given URL and returns HTML version, title, headings, link stats, and login form presence.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "analyze"
                ],
                "summary": "Analyze a web page",
                "parameters": [
                    {
                        "description": "URL to analyze",
                        "name": "analyzeRequest",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/api.analyzeRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/model.AnalyzeResult"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/api.errorResponse"
                        }
                    },
                    "502": {
                        "description": "Bad Gateway",
                        "schema": {
                            "$ref": "#/definitions/api.errorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "api.analyzeRequest": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                }
            }
        },
        "api.errorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                },
                "status_code": {
                    "type": "integer"
                }
            }
        },
        "model.AnalyzeResult": {
            "type": "object",
            "properties": {
                "headings": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/model.HeadingCount"
                    }
                },
                "html_version": {
                    "type": "string"
                },
                "links": {
                    "$ref": "#/definitions/model.LinkStats"
                },
                "login_form": {
                    "type": "boolean"
                },
                "title": {
                    "type": "string"
                }
            }
        },
        "model.HeadingCount": {
            "type": "object",
            "properties": {
                "count": {
                    "type": "integer"
                },
                "level": {
                    "type": "integer"
                }
            }
        },
        "model.LinkStats": {
            "type": "object",
            "properties": {
                "external": {
                    "type": "integer"
                },
                "inaccessible": {
                    "type": "integer"
                },
                "internal": {
                    "type": "integer"
                }
            }
        }
    }
}